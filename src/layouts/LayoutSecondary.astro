---
import "../styles/global.css";
import HeaderSecondary from "../components/Header/HeaderSecondary.astro";
import HeaderMobileSecondary from "../components/Header/HeaderMobileSecondary.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/fav.png" />
		<meta name="generator" content={Astro.generator} />
		<style>
			@font-face {
				font-family: "Super Grotesk";
				src: url("/fonts/SuperGroteskARegular.ttf") format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}
			@font-face {
				font-family: "Minion Pro";
				src: url("/fonts/MinionProRegular.ttf") format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}
		</style>
		<title>Juan Diaz Portfolio</title>
	</head>
	<body>
		<HeaderSecondary />
		<HeaderMobileSecondary />
		<div class="flex flex-col justify-center pt-16 md:pt-20">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
