---
const links = [
  { href: "#home", label: "Home" },
  { href: "#stack", label: "Stack" },
  { href: "#projects", label: "Projects" },
  { href: "#about", label: "About" },
];
---

<nav
  aria-label="Quick navigation"
  class="hidden md:flex fixed left-4 top-1/2 -translate-y-1/2 z-40"
>
  <div
    class="flex flex-col gap-3 rounded-full border border-accent bg-surface/90 backdrop-blur px-2 py-3"
  >
    {
      links.map((link) => (
        <a
          href={link.href}
          aria-label={link.label}
          title={link.label}
          class="group flex h-10 w-10 items-center justify-center rounded-full text-accent hover:text-accent-2 hover:bg-hover transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-ring"
        >
          {link.href === "#home" && (
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M3 10.5 12 3l9 7.5" />
              <path d="M5 10v10h14V10" />
            </svg>
          )}

          {link.href === "#stack" && (
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M12 2l9 5-9 5-9-5 9-5Z" />
              <path d="M3 7v10l9 5 9-5V7" />
              <path d="M12 12v10" />
            </svg>
          )}

          {link.href === "#projects" && (
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M20 7H4" />
              <path d="M20 11H4" />
              <path d="M20 15H4" />
              <path d="M20 19H4" />
              <path d="M8 3h8v4H8z" />
            </svg>
          )}

          {link.href === "#about" && (
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M20 21a8 8 0 0 0-16 0" />
              <circle cx="12" cy="7" r="4" />
            </svg>
          )}
        </a>
      ))
    }
  </div>
</nav>
