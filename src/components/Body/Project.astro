---
import { Image } from "astro:assets";

interface Props {
    title: string;
    img: string;
    description: string;
    languages: string[];
    links: { name: string; url: string }[];
}

const { title, img, description, languages, links } = Astro.props;
---

<div
    class="flex flex-col items-center bg-surface p-4 rounded-xl shadow-xl border w-8/12"
>
    <h2 class="text-2xl font-bold border-b-2 border-accent w-full p-2">
        {title}
    </h2>

    <div class="my-4 w-full overflow-hidden rounded h-64">
        <Image
            src={img}
            alt={title}
            width={800}
            height={450}
            class="w-full h-auto object-cover"
        />
    </div>
    <div class="h-24">
        <p>{description}</p>
    </div>
    <div class="flex gap-2 p-2 ">
        {
            languages.map((language) => (
                <span class="p-2 border border-accent rounded-xl font-bold ">
                    {language}
                </span>
            ))
        }
    </div>
    <div class="flex gap-2">
        {
            links.map((link) => (
                <a href={link.url} class="p-1 border-2 border-accent rounded">
                    {link.name}
                </a>
            ))
        }
    </div>
</div>
