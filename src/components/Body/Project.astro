---
import { Image } from "astro:assets";
interface Props {
    title: string;
    img: string;
    description: string;
    languages: string[];
    links: { name: string; url: string; icon: string }[];
}

const { title, img, description, languages, links } = Astro.props;
---

<div
    class=" flex flex-col items-center bg-surface p-4 rounded-xl shadow-xl border lg:w-[450px] w-[350px] md:w-[400px] transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
>
    <h2 class="text-2xl font-bold border-b-2 border-accent w-full p-2">
        {title}
    </h2>

    <div class="my-4 w-full overflow-hidden rounded h-64">
        <Image
            src={img}
            alt={title}
            width={800}
            height={450}
            class="w-full h-auto object-cover"
        />
    </div>
    <div class="h-24 lg:h-10 w-full text-center">
        <p>{description}</p>
    </div>
    <div class="flex justify-center items-end gap-2 p-2 flex-wrap w-full h-32 ">
        {
            languages.map((language) => (
                <span class="p-2 border border-accent h-10 rounded-xl font-bold ">
                    {language}
                </span>
            ))
        }
    </div>
    <div class="flex gap-2 mt-2 ">
        {
            links.map((link) => (
                <a href={link.url} class="flex items-center gap-2 p-2 border  text-xl  bg-accent rounded text-black cursor-pointer hover:bg-accent-2 ">
                   <Image src={link.icon} alt="test" inferSize={true} width={24} height={24} /> <span>{link.name}</span>
                </a>
            ))
        }
    </div>
</div>
