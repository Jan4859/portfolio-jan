---
interface Props {
    linkedinSvg: ImageMetadata;
    mail: ImageMetadata;
    githubSvg?: ImageMetadata;
}

const { linkedinSvg, mail, githubSvg } = Astro.props;
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
---

<div class="p-8 mt-8">
    <h1 class="text-5xl text-center font-body">Juan Diaz</h1>
    <p class="text-accent xl:text-2xl md:text-xl text-lg text-center">
        Full Stack Developer - 4 years of experience - English/Spanish -
        Warsaw/Remote
    </p>
    <div class="flex justify-center mt-4 gap-8">
        <a
            href="https://github.com/username"
            class="flex justify-center items-center p-2 border text-xl bg-accent rounded-xl text-black hover:shadow-2xl cursor-pointer hover:bg-accent-2 w-36"
        >
            <Image
                src={linkedinSvg}
                alt="test"
                width={36}
                height={36}
                class="mb-1"
            />
            <span>LinkedIn</span>
        </a>
        <a
            href="mailto:jan@jan4859.com"
            class="flex justify-center items-center gap-2 p-2 border text-xl bg-surface text-accent hover:shadow-2xl hover:border-white rounded-xl cursor-pointer w-36"
        >
            <Image
                src={mail}
                alt="test"
                width={36}
                height={36}
                class="text-red-500 fill-red-500"
            />
            <span>Mail</span>
        </a>
    </div>
</div>
