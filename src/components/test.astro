---
// Test component to showcase all custom colors
---

<div class="p-8 bg-custom min-h-screen">
    <h1 class="text-4xl font-bold text-custom mb-8 font-heading">Color Palette Exhibition</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Background Colors -->
        <div class="space-y-6">
            <h2 class="text-2xl text-accent mb-4">Background Colors</h2>

            <div class="space-y-4">
                <div class="flex items-center">
                    <div class="w-24 h-24 bg-rich-black border border-custom"></div>
                    <div class="ml-4">
                        <p class="text-custom">bg (Rich Black)</p>
                        <p class="text-muted">#000814</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div class="w-24 h-24 bg-oxford-blue border border-custom">
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">surface (Oxford Blue)</p>
                        <p class="text-muted">#001d3d</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div class="w-24 h-24 bg-yale-blue-300 border border-custom">
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">code-bg (Yale Blue 300)</p>
                        <p class="text-muted">#00203d</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div class="w-24 h-24 bg-yale-blue-400 border border-custom"></div>
                    <div class="ml-4">
                        <p class="text-custom">hover (Yale Blue 400)</p>
                        <p class="text-muted">#002a52</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Text and Accent Colors -->
        <div class="space-y-6">
            <h2 class="text-2xl text-accent mb-4">Text & Accent Colors</h2>

            <div class="space-y-4">
                <div class="flex items-center">
                    <div
                        class="w-24 h-24 bg-surface flex items-center justify-center"
                    >
                        <span class="text-custom text-2xl">Aa</span>
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">text</p>
                        <p class="text-muted">#FFFFFF</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div
                        class="w-24 h-24 bg-surface flex items-center justify-center"
                    >
                        <span class="text-muted text-2xl">Aa</span>
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">text-muted (Yale Blue 900)</p>
                        <p class="text-muted">#add8ff</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div
                        class="w-24 h-24 bg-surface flex items-center justify-center"
                    >
                        <span class="text-accent text-2xl">Aa</span>
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">accent (Mikado Yellow)</p>
                        <p class="text-muted">#ffc300</p>
                    </div>
                </div>

                <div class="flex items-center">
                    <div
                        class="w-24 h-24 bg-surface flex items-center justify-center"
                    >
                        <span class="text-accent-2 text-2xl">Aa</span>
                    </div>
                    <div class="ml-4">
                        <p class="text-custom">accent-2 (Gold)</p>
                        <p class="text-muted">#ffd60a</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Color Shades Section -->
    <div class="mt-12">
        <h2 class="text-2xl text-accent mb-6 font-heading">Color Shades</h2>
        
        <!-- Rich Black Shades -->
        <div class="mb-8">
            <h3 class="text-xl text-custom mb-4">Rich Black Shades</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-rich-black-100 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">100</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-rich-black-200 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">200</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-rich-black-300 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">300</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-rich-black-400 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">400</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-rich-black-500 border border-custom rounded"></div>
