                    <div class="w-12 h-12 bg-rich-black-900 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">900</p>
                </div>
            </div>
        </div>
        
        <!-- Yale Blue Shades -->
        <div class="mb-8">
            <h3 class="text-xl text-custom mb-4">Yale Blue Shades</h3>
            <div class="grid grid-cols-5 md:grid-cols-10 gap-2">
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-yale-blue-100 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">100</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-yale-blue-200 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">200</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-yale-blue-300 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">300</p>
                </div>
                <div class="flex flex-col items-center">
                    <div class="w-12 h-12 bg-yale-blue-400 border border-custom rounded"></div>
                    <p class="text-xs text-muted mt-1">400</p>
                </div>
                <div class="flex flex-col items-center">
