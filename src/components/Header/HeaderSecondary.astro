---
import { Image } from "astro:assets";
import leftArrow from "../../assets/left-arrow.svg";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-surface hidden md:block">
    <div class="w-full text-xl">
        <div class="flex items-center p-6 px-8 border-b border-accent">
            <a
                href="https://jan4859.com"
                class="flex items-center gap-2 text-accent hover:text-accent-2 transition-colors duration-200"
            >
                <Image
                    src={leftArrow}
                    alt="Back to home"
                    width={20}
                    height={20}
                    class="mb-1"
                />
                <span>Back </span>
            </a>
        </div>
    </div>
</header>
