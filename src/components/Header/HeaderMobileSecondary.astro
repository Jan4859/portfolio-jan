---
import { Image } from "astro:assets";
import leftArrow from "../../assets/left-arrow.svg";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-surface md:hidden">
    <div class="w-full text-xl">
        <div class="flex items-center p-4 px-6 border-b border-border">
            <a
                href="https://jan4859.com"
                class="flex items-center gap-2 text-text-muted hover:text-text transition-colors duration-200"
            >
                <Image
                    src={leftArrow}
                    alt="Back to home"
                    width={18}
                    height={18}
                />
                <span class="text-sm">Back</span>
            </a>
        </div>
    </div>
</header>
