---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/Hero/HeroSection.astro";
import linkedinSvg from "../assets/linkedin.svg";
import mail from "../assets/mail.png";
import eye from "../assets/eye.png";
import website from "../assets/web.png";
import Body from "../components/Body/Body.astro";
import swaipy from "../assets/imgs/swaipy.jpeg";
import xui2 from "../assets/imgs/XUIv2.png";
import Footer from "../components/Footer/Footer.astro";

// Language icons
import phpSvg from "../assets/php.png";
import laravelSvg from "../assets/laravel.svg?url";
import reactSvg from "../assets/react.svg?url";
import astroSvg from "../assets/astroIcon.svg?url";
import typescriptSvg from "../assets/typescript.svg?url";
import tailwindSvg from "../assets/tailwind-css.svg?url";
import npmSvg from "../assets/npm.svg?url";
import storybookSvg from "../assets/storybook.svg?url";
import npmBlackSvg from "../assets/npmblack.svg?url";

const projects = [
  {
    title: "SWAIPY",
    img: swaipy,
    description:
      "A set of AI tools(SaaS) to convert multimedia content (SCORM, video, audio) into accessible formats for people with different disabilities.",
    languages: ["PHP", "Laravel", "Astro", "React", "TypeScript"],
    languageIcons: {
      PHP: phpSvg,
      Laravel: laravelSvg,
      Astro: astroSvg,
      React: reactSvg,
      TypeScript: typescriptSvg,
    },
    links: [
      {
        name: "Preview",
        url: "/swaipy",
        icon: eye,
      },
    ],
  },
  {
    title: "XUI2",
    img: xui2,
    description:
      "XUI2 is a React component library that provides a set of reusable, accessible, and customizable components to build modern web applications.",
    languages: ["React", "TypeScript", "NPM", "Tailwind", "Storybook"],
    languageIcons: {
      React: reactSvg,
      TypeScript: typescriptSvg,
      NPM: npmSvg,
      Tailwind: tailwindSvg,
      Storybook: storybookSvg,
    },
    links: [
      {
        name: "Repository",
        url: "https://www.npmjs.com/package/@ximdex/xui-react",
        icon: npmBlackSvg,
      },
      {
        name: "Coming Soon",
        url: "",
        icon: website,
      },
    ],
  },
];
---

<Layout>
  <HeroSection linkedinSvg={linkedinSvg} mail={mail} />
  <Body projects={projects} />
  <Footer />
</Layout>
